<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 p-4">
  <div class="w-full max-w-md">
    <!-- Logo Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-white rounded-full shadow-lg mb-4">
        <i class="fas fa-chart-line text-4xl text-indigo-600"></i>
      </div>
      <h1 class="text-4xl font-bold text-white mb-2">WiseInvest</h1>
      <p class="text-indigo-200">AI 기반 주식 투자 분석 플랫폼</p>
    </div>

    <!-- Login Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 slide-up">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">로그인</h2>

      <% if flash[:notice] %>
        <div class="mb-4 p-3 bg-green-100 text-green-700 rounded-lg text-sm">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-lg text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: session_path, class: "space-y-5" do |form| %>
        <!-- Email Input -->
        <div>
          <%= form.label :email_address, "이메일", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-envelope absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: "example@email.com",
                value: params[:email_address],
                class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Password Input -->
        <div>
          <%= form.label :password, "비밀번호", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "••••••••",
                maxlength: 72,
                class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex items-center justify-between">
          <label class="flex items-center">
            <input type="checkbox" name="remember_me" class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
            <span class="ml-2 text-sm text-gray-600">로그인 상태 유지</span>
          </label>
          <%= link_to "비밀번호 찾기", new_password_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
        </div>

        <!-- Login Button -->
        <%= form.submit "로그인",
            class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transform hover:scale-[1.02] transition duration-200 shadow-lg cursor-pointer" %>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">또는</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <p class="text-gray-600">
          아직 계정이 없으신가요?
          <%= link_to "회원가입", new_registration_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
        </p>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center text-indigo-100 text-sm">
      <p>&copy; <%= Date.current.year %> WiseInvest. All rights reserved.</p>
      <div class="mt-2 space-x-4">
        <a href="#" class="hover:text-white transition">이용약관</a>
        <span>·</span>
        <a href="#" class="hover:text-white transition">개인정보처리방침</a>
      </div>
    </div>
  </div>
</div>
