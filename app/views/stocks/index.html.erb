<div class="fade-in">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">종목 분석</h1>
    <p class="text-gray-600">버핏 스타일로 종목을 분석해보세요</p>
  </div>

  <!-- Search -->
  <div class="card mb-8">
    <%= form_with url: stocks_path, method: :get, class: "flex gap-4" do |f| %>
      <div class="flex-1 relative">
        <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
        <%= f.text_field :q, value: params[:q], placeholder: "종목명 또는 코드 검색", class: "form-input pl-12" %>
      </div>
      <%= f.submit "검색", class: "btn-primary px-8 cursor-pointer" %>
    <% end %>
  </div>

  <!-- Stock List -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @stocks.each do |stock| %>
      <% report = stock.latest_report %>
      <%= link_to stock_path(stock), class: "card hover:shadow-lg transition block" do %>
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-bold text-gray-900"><%= stock.name %></h3>
            <p class="text-sm text-gray-500"><%= stock.symbol %> · <%= stock.sector %></p>
          </div>
          <% if report %>
            <div class="grade-badge grade-<%= report.grade.downcase %>"><%= report.grade %></div>
          <% else %>
            <div class="grade-badge bg-gray-100 text-gray-400">-</div>
          <% end %>
        </div>

        <% if report %>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">버핏 점수</span>
            <span class="font-bold text-gray-900"><%= report.total_score %>점</span>
          </div>
          <div class="score-bar mt-2">
            <div class="score-bar-fill" style="width: <%= report.total_score %>%"></div>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">분석하기 버튼을 눌러 점수를 확인하세요</p>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% if @stocks.empty? %>
    <div class="card text-center py-12">
      <i class="fas fa-search text-4xl text-gray-300 mb-4"></i>
      <p class="text-gray-500">검색 결과가 없습니다.</p>
    </div>
  <% end %>
</div>
