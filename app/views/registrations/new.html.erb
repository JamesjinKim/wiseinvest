<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 p-4">
  <div class="w-full max-w-md">
    <!-- Logo Section -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-white rounded-full shadow-lg mb-4">
        <i class="fas fa-chart-line text-4xl text-indigo-600"></i>
      </div>
      <h1 class="text-4xl font-bold text-white mb-2">WiseInvest</h1>
      <p class="text-indigo-200">AI 기반 주식 투자 분석 플랫폼</p>
    </div>

    <!-- Register Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 slide-up">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">회원가입</h2>

      <% if @user.errors.any? %>
        <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-lg text-sm">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: registration_path, class: "space-y-5" do |form| %>
        <!-- Name Input -->
        <div>
          <%= form.label :name, "이름", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-user absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.text_field :name, placeholder: "홍길동", class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Email Input -->
        <div>
          <%= form.label :email_address, "이메일", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-envelope absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "example@email.com", class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Password Input -->
        <div>
          <%= form.label :password, "비밀번호", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "8자 이상 입력", class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= form.label :password_confirmation, "비밀번호 확인", class: "form-label" %>
          <div class="relative">
            <i class="fas fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "비밀번호 재입력", class: "form-input pl-12" %>
          </div>
        </div>

        <!-- Terms -->
        <div class="flex items-start">
          <input type="checkbox" required class="w-4 h-4 mt-1 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
          <span class="ml-2 text-sm text-gray-600">
            <a href="#" class="text-indigo-600 hover:underline">이용약관</a> 및
            <a href="#" class="text-indigo-600 hover:underline">개인정보처리방침</a>에 동의합니다.
          </span>
        </div>

        <!-- Register Button -->
        <%= form.submit "회원가입", class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transform hover:scale-[1.02] transition duration-200 shadow-lg cursor-pointer" %>
      <% end %>

      <!-- Login Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", new_session_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
        </p>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center text-indigo-100 text-sm">
      <p>&copy; <%= Date.current.year %> WiseInvest. All rights reserved.</p>
    </div>
  </div>
</div>
